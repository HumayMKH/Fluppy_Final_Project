@using Fluppy.Models
@{
    User user = (User)Session["LoginnedUser"];
}

<!DOCTYPE html>
<html lang="en">

<!-- head area -->

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Fluppy</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/css/bootstrap.min.css">
    <link rel="icon" type="image/png" sizes="32x32" href="~/Public/assets/img/logo/favicon-32x32.png">
    <link rel="stylesheet" href="~/Public/assets/OwlCarousel2-2.3.4/dist/assets/owl.carousel.min.css">
    <link rel="stylesheet" href="~/Public/assets/OwlCarousel2-2.3.4/dist/assets/owl.theme.default.min.css">
    <link href="https://fonts.googleapis.com/css2?family=Playfair+Display:ital,wght@1,700&display=swap"
          rel="stylesheet">
    <link rel="stylesheet" type="text/css" href="~/Public/assets/datetimepicker-master/build/jquery.datetimepicker.min.css" />
    <link rel="stylesheet" href="~/Public/assets/Simple-Responsive-jQuery-Image-Viewer-Plugin-Smooth-Products/css/smoothproducts.css">
    <link href="~/Public/assets/css/style.css" rel="stylesheet" />
    <link href="~/Public/assets/css/Pagination.css" rel="stylesheet" />
    <link href="~/Public/assets/css/productjsStyle.css" rel="stylesheet" />
</head>

<!-- head area end -->
<!-- body area -->

<body>

    <!-- header area -->

    <header>

        <!-- header adress info -->

        <section class="header-top-area">
            <div class="top-header">
                <div class="container">
                    <div class="row">
                        <div class="top-left">
                            <ul>
                                <li>
                                    <i class="fas fa-envelope"></i> <span class="top-left d-none d-lg-inline">@(ViewBag.HomeSetting!=null? ViewBag.HomeSetting.Email:"")</span>
                                </li>
                                <li>
                                    <i class="fas fa-phone-alt"></i>
                                    <span class="top-left d-none d-lg-inline">@(ViewBag.HomeSetting!=null? ViewBag.HomeSetting.Phone:"")</span>
                                </li>
                                <li>
                                    <i class="fas fa-map-marker-alt"></i><span class="top-left d-none d-lg-inline"> @(ViewBag.HomeSetting!=null? ViewBag.HomeSetting.Address:"")</span>
                                </li>
                            </ul>
                        </div>

                        <div class="top-right d-none d-sm-inline">
                            <ul>
                                @foreach (var item in ViewBag.HomeSetting.HomeSocials)
                                {
                                    <li><a href="@item.Link" title="@item.SocialType.Title"><i class="@item.SocialType.Icon" aria-hidden="true"></i></a></li>

                                }

                            </ul>
                        </div>
                    </div>
                </div>
            </div>
        </section>

        <!-- header adress info end-->
        <!-- header nav -->

        <section class="header-menu-area">
            <div class="menu-header" id="stickyy">
                <div class="container">
                    <div class="logoimg">
                        <a href="@Url.Action("Index","Home")"><img class="logo" src="~/Uploads/@(ViewBag.HomeSetting!=null? ViewBag.HomeSetting.Logo:"")" alt="Fluppy-Logo"></a>

                    </div>
                    <a class="site-name">@(ViewBag.HomeSetting!=null? ViewBag.HomeSetting.Name:"")</a>
                    <input type="checkbox" id="check">
                    <label for="check" class=" d-inline d-lg-none checkbtn">
                        <i class="fas fa-bars"></i>
                    </label>

                    <ul>
                        <li><a href='@Url.Action("Index","Home")'>Home</a></li>
                        <li><a href='@Url.Action("Index","About")'>About</a></li>

                        <li>
                            <a href='@Url.Action("Index","Service")'>Services</a>

                        </li>
                        <li><a href='@Url.Action("Index","Shopping")'>Shop</a></li>
                        <li>
                            <a href='@Url.Action("Index","Adopt")'>Adopt</a>

                        </li>
                        <li><a href='@Url.Action("Index","Blog")'>Blog</a></li>
                        <li><a href='@Url.Action("Index","Contact")'>Contact</a></li>
                        <li>
                            <a class="search-icon"><i class="fa fa-search" aria-hidden="true"></i></a>
                            <ul class="search-input">
                                <li class="margin-zero">
                                    <form method="post" action="@Url.Action("Index","Home")">
                                        <input class="input-size" name="searchText" type="text" placeholder="Search...">
                                        <button type="submit" class="icon-size"><i class="fa fa-search" aria-hidden="true"></i></button>
                                    </form>
                                </li>
                            </ul>
                        </li>

                        @if (user != null)
                        {
                            <li style="border-bottom:1px solid;">
                                <span style="color:#F7CA16;">Welcome </span><span style="color:#377b00;font-weight:bold;">@user.Name</span>
                                <ul style="background:white;border:1px solid #377b00;width:152px;">
                                    <li> <a style="padding:13px 43px;" href="@Url.Action("Logout", "Home")">Logout</a></li>
                                </ul>
                            </li>

                        }
                        else
                        {
                            <li class="login-color">
                                <a href="@Url.Action("Login", "Home")">Login</a>
                            </li>
                        }
                    </ul>

                </div>
                <div class="wish-and-card ">
                    <a href="@Url.Action("WishList", "Shop")" title="Wishlist">
                        <i class="fa fa-heart" aria-hidden="true" style="margin-right: 15px;"></i>
                        <span style="top: -8px;right: 47px;" class=" wishlistCount">@ViewBag.WishListCount</span>
                    </a>
                    <a href="@Url.Action("Checkout", "Shop")" title="Shopping Cart">
                        <i class="fa fa-shopping-basket" aria-hidden="true" style="margin-right: 20px;"></i>
                        <span style="top: -8px;right: 5px;" class=" cartCount">@ViewBag.CartListCount</span>
                    </a>
                </div>
            </div>
        </section>

        <!-- header nav end-->

    </header>

    <!-- header area end -->

    @RenderBody()

    <!-- footer -->

    <footer>

        <!-- footer menu area-->

        <section class="footer-menu" style="margin-top: 0 ;">
            <div class="container">

                <div class="row pt-5">

                    <div class="col-12 col-md-4">
                        <h3 style="font-size: 36px;">@(ViewBag.HomeSetting!=null? ViewBag.HomeSetting.Name:"")<br> Pet Home</h3>
                        <p class="footer-text">
                            @(ViewBag.HomeSetting!=null? ViewBag.HomeSetting.FooterContent: "")
                            <a href="@Url.Action("Index", "About")"
                               style="text-transform: uppercase; text-decoration: none;font-weight: bold;font-size: 12px;">
                                About
                                more
                            </a>
                        </p>
                    </div>
                    <div class="col-12 col-md-4">
                        <h5 style="font-weight: bold;padding-bottom: 10px;border-bottom: 1px dashed white;">
                            Working
                            Hours
                        </h5>
                        <p>Monday-Thursday - - - - - - - - @(ViewBag.HomeSetting!=null? ViewBag.HomeSetting.StartTime.ToString("HH:mm") : "") - @(ViewBag.HomeSetting!=null? ViewBag.HomeSetting.EndTime.ToString("HH:mm") : "")</p>
                        <p>Saturday - - - - - - - - - - - - - - - @(ViewBag.HomeSetting!=null? ViewBag.HomeSetting.SatStartTime.ToString("HH:mm") : "") - @(ViewBag.HomeSetting!=null? ViewBag.HomeSetting.SatEndTime.ToString("HH:mm") : "")</p>
                        <p>Sunday - - - - - - - - - - - - - - - - Closed</p>
                    </div>
                    <div class="col-12 col-md-3">
                        <h5 style="font-weight: bold;padding-bottom: 10px;border-bottom: 1px dashed white;">
                            Contact
                        </h5>
                        <div class="top-left">
                            <ul class="footer-contact-info">
                                <li>
                                    <i class="fas fa-envelope"></i> <span class="top-left d-inline">@(ViewBag.HomeSetting!=null? ViewBag.HomeSetting.Email:"")</span>
                                </li>
                                <li>
                                    <i class="fas fa-phone-alt"></i><span class="top-left d-inline">@(ViewBag.HomeSetting!=null? ViewBag.HomeSetting.Phone:"")</span>
                                </li>
                                <li>
                                    <i class="fas fa-map-marker-alt"></i><span class="top-left d-inline">@(ViewBag.HomeSetting!=null? ViewBag.HomeSetting.Address:"")</span>
                                </li>
                            </ul>
                        </div>
                    </div>
                    <div class=" col-md-1 d-none d-md-inline">

                        <ul class="footer-social">
                            @foreach (var item in ViewBag.HomeSetting.HomeSocials)
                            {
                                <li><a href="@item.Link" title="@item.SocialType.Title"><i class="@item.SocialType.Icon" aria-hidden="true"></i></a></li>

                            }
                        </ul>
                    </div>
                </div>

                <!-- footer copyright-->

                <div class="copyright">@(ViewBag.HomeSetting!=null? ViewBag.HomeSetting.CopyRight : "")</div>

                <!-- footer copyright end-->
            </div>
        </section>

        <!-- footer menu area end-->

    </footer>

    <!-- footer end -->

    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
    <script src="~/Public/assets/OwlCarousel2-2.3.4/docs/assets/vendors/jquery.min.js"></script>
    <script src="~/Public/assets/OwlCarousel2-2.3.4/dist/owl.carousel.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/js/bootstrap.bundle.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/js/bootstrap.min.js"></script>
    <script src="https://kit.fontawesome.com/0b2f9bf87a.js" crossorigin="anonymous"></script>
    <script src="~/Public/assets/js/counter/js/counter.min.js" type="text/javascript"></script>
    <script src="~/Public/assets/js/counter/js/jquery.easing.js" type="text/javascript"></script>
    <script type="text/javascript" src="~/Public/assets/Simple-Responsive-jQuery-Image-Viewer-Plugin-Smooth-Products/js/smoothproducts.min.js"></script>
    <script src="~/Public/assets/datetimepicker-master/build/jquery.datetimepicker.min.js"></script>
    <script src="~/Public/assets/datetimepicker-master/build/jquery.datetimepicker.full.min.js"></script>

    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validate/1.19.1/jquery.validate.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validation-unobtrusive/3.2.11/jquery.validate.unobtrusive.min.js"></script>
    <script src="~/Public/assets/js/productScript.js"></script>
    <script src="~/Public/assets/js/subscribe.js"></script>
    <script src="~/Public/assets/js/script.js"></script>
</body>

<!-- body area end-->

</html>

