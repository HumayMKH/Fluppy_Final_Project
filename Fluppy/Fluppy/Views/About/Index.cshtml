@model Fluppy.ViewModels.VmAbout
@using Fluppy.Models
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<!-- header image -->

@{
    Html.RenderPartial("~/Views/Shared/_HeaderImagePartial.cshtml", Model.HeaderImage);
}

<!-- header image end-->
<!-- service area -->

<section class="service-area">
        @{
            Html.RenderPartial("~/Views/Shared/_ServicePartial.cshtml", Model.Services);
        }
</section>

<!-- service area end-->
<!-- blog area -->

<section class="blog-area">
    <div class="container">

        <div class=" section-text pb-4" id="blog-text">Blog</div>
        <div class="row">
            <div class="col-12 col-sm-12">
                @{
                    Html.RenderPartial("~/Views/Shared/_BlogPartial.cshtml", Model.Blogs);
                }
            </div>
        </div>
    </div>
</section>

<!-- blog area end-->
<!-- counter -->

<section class="counter-area">
    <div class="counting-sec">
        <div class="container">

            <div class="inner-width text-center">
                <div class="row">
                    <div class="col-12 col-sm-4 box-counter">
                        <i class="fa fa-briefcase" aria-hidden="true"></i>
                        <div class="counter">
                            @ViewBag.Service
                        </div>
                        <p> Services</p>
                    </div>
                    <div class="col-12 col-sm-4 box-counter">
                        <i class="fa fa-money" aria-hidden="true"></i>
                        <div class="counter">
                            @ViewBag.Sales
                        </div>
                        <p> Sells</p>
                    </div>
                    <div class="col-12 col-sm-4 box-counter">
                        <i class="fa fa-paw" aria-hidden="true"></i>
                        <div class="counter">
                            @ViewBag.Adopt
                        </div>
                        <p>Adopts</p>
                    </div>
                </div>
            </div>
        </div>

    </div>
</section>

<!-- counter end -->
