@model Fluppy.ViewModels.VmAdopt
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<!-- header image -->
@{
        Html.RenderPartial("~/Views/Shared/_HeaderImagePartial.cshtml", Model.HeaderImage);
 }

<!-- header image end-->

<!-- adopt area -->

<section class="adopt-area">
    <div class="container">
        <div class="section-text" id="adopt-text">They wait yours</div>
        <div class="row">
            @{
                Html.RenderPartial("~/Views/Shared/_AdoptPartial.cshtml", Model.Adopts);
            }
            <div class="col-12">
                <div class="col-4 col-sm-4 ml-auto mr-auto mt-4">
                    <div class="pagination">
                        <ul>
                            @if (Model.Currentpage > 1)
                            {
                                <li><a href="@Url.Action("Index","Blog", new { page=(Model.Currentpage==1?1:Model.Currentpage-1)})"><i class="fas fa-arrow-left"></i> </a></li>
                            }
                            @for (int i = 1; i <= Model.PageCount; i++)
                            {

                                <li class="@(Model.Currentpage==i?"currentpage":"")"><a href="@Url.Action("Index","Blog",new{page=i})"> @i </a></li>
                            }
                            @if (Model.Currentpage < Model.PageCount)
                            {
                                <li><a href="@Url.Action("Index","Adopt", new { page=(Model.Currentpage==Model.PageCount?Model.PageCount:Model.Currentpage+1)})"><i class="fas fa-arrow-right"></i> </a></li>
                            }
                        </ul>
                    </div>
                </div>
            </div>
        </div>

        <!-- adoption rules area -->

        <div class="adoption-rules">
            <div class="row ">
                <div class="col-12 col-sm-12">
                    <h4 style="text-transform:uppercase;font-weight: bold;">Adoption Rules</h4>
                    <p>
                        @Html.Raw(Model.AdoptRule != null ? Model.AdoptRule.Content : "")
                    </p>
                </div>
            </div>
        </div>

        <!-- adoption rules area end-->

    </div>
</section>

<!-- adopt area end-->
<!--article area-->

<section class="article-area">
    @{
        Html.RenderPartial("~/Views/Shared/_ArticlePartial.cshtml", Model.Articles);
    }
</section>

<!-- article area end-->