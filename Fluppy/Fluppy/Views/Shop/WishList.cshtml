@model Fluppy.ViewModels.VmProduct

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    List<string> WishList = ViewBag.WishList;
}

<!-- header image -->
@{
    Html.RenderPartial("~/Views/Shared/_HeaderImagePartial.cshtml", Model.HeaderImage);
}

<!-- header image end-->
<!-- Cart area -->

<section class="cart-area">
    <div class="container">
        <div class=" section-text" id="wish-text">Wishlist</div>
        <div class="billing-info" style="overflow-x: auto;">
            <div class="container">
                <div class="row">
                    <div class="col-lg-12"> 
                        <table class="table table-bordered">
                            <thead>
                                <tr>
                                    <th scope="col">#</th>
                                    <th scope="col">Product</th>
                                    <th scope="col">Name</th>
                                    <th scope="col">Price</th>
                                    <th scope="col">Details</th>
                                    <th scope="col">Remove</th>
                                </tr>
                            </thead>
                            <tbody>
                               @{ int i = 1;}
                                @foreach (var item in Model.Products)
                                {
                                     <tr>
                                        <th scope="row" style="display: table-cell;vertical-align: middle;">@(i++)</th>
                                        <td>
                                            <img src="~/Uploads/@item.ProductImages.FirstOrDefault().Image" alt="Wishlist image"
                                                 style="width: 100px;display: block;margin: auto;border: 1px solid #5a6268;">
                                        </td>
                                        <td>@item.Name</td>
                                        <td>@item.Price.ToString("0.00")</td>
                                        <td><a href="@Url.Action("ProductDetails","Shop", new { id=item.Id})"><i class="fas fa-info-circle" style="color: #2D4C47;" aria-hidden="true"></i></a></td>
                                     
                                        <td>
                                            <a href="#" style="color: #2D4C47;background-color:transparent;" data-id="@item.Id" class="list-icon addWishListRemove @(WishList!=null?(WishList.Contains(item.Id.ToString())==true?"addedWishlist":""):"")" title="Add to wishlist">
                                     
                                                    <i class="fa fa-trash"
                                                       aria-hidden="true"></i>
                                                </a>
                                        </td>
                                     </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>

    </div>
</section>

<!-- Cart area end-->
