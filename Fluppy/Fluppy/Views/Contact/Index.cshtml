@model Fluppy.ViewModels.VmContact
@using Fluppy.Models
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@{
    Html.RenderPartial("~/Views/Shared/_HeaderImagePartial.cshtml", Model.HeaderImage);
}

<!-- header image end-->
<!-- contact area -->

<section class="contact-area">
    <div class="container">
        <div class=" section-text pb-5" id="contact-text">Contact Us</div>
        <div class="row">

            <div class="col-12 col-md-6 pb-4">
                <div class="row">

                    <form method="post" style="width:100%;" autocomplete="off" action="@Url.Action("UserMessage","Contact")">

                        <div class="col-12 col-sm-12 contact-size-input">
                            @Html.EditorFor(model => model.Contact.Fullname, new { htmlAttributes = new { @placeholder = "Fullname", @class = "form-control" } })

                            @*<input type="text" placeholder="Fullname" name="Contact.Fullname">*@
                            @Html.ValidationMessageFor(m => m.Contact.Fullname, "", new { @class = "text-danger" })
                        </div>
                        <div class="col-12 col-sm-12 contact-size-input">
                            @Html.EditorFor(model => model.Contact.Phone, new { htmlAttributes = new { @placeholder = "Phone", @class = "form-control" } })
                            @Html.ValidationMessageFor(m => m.Contact.Phone, "", new { @class = "text-danger" })
                        </div>
                        <div class="col-12 col-sm-12 contact-size-input">
                            @Html.EditorFor(model => model.Contact.Email, new { htmlAttributes = new { @placeholder = "Email", @class = "form-control", @type = "email" } })
                            @Html.ValidationMessageFor(m => m.Contact.Email, "", new { @class = "text-danger" })
                        </div>
                        <div class="col-12 col-sm-12 contact-size-input">
                            <span style="color:#495057;">Your Message :</span>

                            @Html.TextAreaFor(model => model.Contact.Message, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(m => m.Contact.Message, "", new { @class = "text-danger" })
                        </div>
                        <div class="col-12 col-sm-12 contact-size-input-service">
                            <button type="submit" style="outline:none; width: 100%; padding: 10px 15px; background: #377b00; text-transform: uppercase; color: white; border: 2px solid #377b00">Contact Us</button>
                        </div>
                    </form>
                    <div style="padding:0 15px;">
                        @if (Session["Required"] != null)
                        {
                            Session["Required"] = null;
                            <div class="alert alert-warning">
                                Please fill all inputs!
                            </div>
                        }

                        @if (Session["Success"] != null)
                        {
                            Session["Success"] = null;
                            <div class="alert alert-success">
                                Your message sent successfully!
                            </div>
                        }
                    </div>
                </div>
            </div>
            <div class="col-12 col-md-6">
                <iframe src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d194472.67477142884!2d49.7148729641512!3d40.39476947124608!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x40307d6bd6211cf9%3A0x343f6b5e7ae56c6b!2sBaku%2C%20Azerbaijan!5e0!3m2!1sen!2s!4v1595766580153!5m2!1sen!2s"
                        width="600" height="450" frameborder="0" style="border:0; width: 100%;" allowfullscreen=""
                        aria-hidden="false" tabindex="0"></iframe>
            </div>
        </div>

    </div>
</section>

<!-- contact area end-->