@model IEnumerable<Fluppy.Models.Testimonial>

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

    <div class="mt-2 ml-4 mr-4">
        <h4>Testimonial</h4>

        <h2 style="font-weight:bold;">Index</h2>
        <a class=" btn btn-primary" href="@Url.Action("Create","Testimonial") ">Create New</a>

        <table class="table table-responsive ">
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Image)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Content)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Fullname)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Position)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.CreatedDate)
                </th>
                <th></th>
            </tr>

            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        <img src="~/Uploads/@item.Image" alt="Alternate Text" width="100" />
                    </td>
                    <td>
                        @(item.Content.Length>100?item.Content.Substring(0,100)+"...":item.Content)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Fullname)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Position)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.CreatedDate)
                    </td>
                    <td>
                        <a class="update-link btn btn-primary" href="@Url.Action("Update","Testimonial", new { id = item.Id }) "><i class="fas fa-edit"></i></a>
                        <a class="update-link btn btn-info" href="@Url.Action("Details","Testimonial", new { id = item.Id }) "><i class="fas fa-info-circle"></i></a>
                        <a class="update-link btn btn-danger" href="@Url.Action("Delete","Testimonial", new { id = item.Id }) " onclick="return confirm('Are you sure?')"><i class="fas fa-trash"></i></a>

                    </td>
                </tr>
            }

        </table>
    </div>